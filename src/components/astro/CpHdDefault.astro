---
import 'flag-icons/css/flag-icons.min.css';
import logo from "@images/logo.png"
---

<!-- Desktop -->
<div class="tablet:px-100px relative">
  <div id="home" class="section absolute top-8 right-0"></div>
  <div class="tablet:px-24 max-h-60px tablet:max-h-124px">
    <div class="flex justify-center items-center">
      <div class="absolute left-0 ml-6 z-50">
        <div class="flex flex-col gap-2">
          <div class="flex gap-2"><div class="fi fi-us text-xl cursor-pointer"></div><p class="hidden tablet:block text-xs text-#efece8">English Version</p></div>
          <div class="flex gap-2"><div class="fi fi-br text-xl cursor-pointer"></div><p class="hidden tablet:block text-xs text-#efece8">Portuguese Version</p></div>
        </div>
      </div>
      <div class="py-4 max-w-120px tablet:max-w-180px">
        <img src={logo.src} alt="Logo Adv. Amanda Ferraz">
      </div>
      <div class="fixed right-0 mr-6 z-50 flex items-center gap-2" id="menu-trigger">
        <div><p id="menu-text" class="playfair-display-bold text-white hidden">Home</p></div>
        <div class="bg-#a57c59 rounded-full p-2"> 
          <div id="menu-icon" class="i-ic:round-menu w-32px h-32px" style="color: #efece8;"></div>
        </div>
      </div>
    </div> 
  </div>
</div>

